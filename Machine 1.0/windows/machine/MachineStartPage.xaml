<Window x:Class="machine.MachineStartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:machine"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:XAMLConstants="clr-namespace:XAMLConstants"
        mc:Ignorable="d" Title="The Machine" WindowState="Normal"
        SizeChanged="Window_SizeChanged" Style="{DynamicResource CustomTitleBarMachine}" Loaded="window_Loaded"
        PreviewKeyDown="window_PreviewKeyDown" Closed="Window_Closed">
    <TextBlock Background="Black" Foreground="White" VerticalAlignment="Bottom"
               FontFamily="./machine_font.ttf#CallOne-Regular" LineStackingStrategy="MaxHeight" LineHeight="20" x:Name="machineText">
    </TextBlock>
</Window>
